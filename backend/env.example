# Server Configuration
PORT=5000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/dr-birdy-books
# OR use MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/dr-birdy-books

# JWT Secret (Generate a strong random string)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Admin Credentials (Default - CHANGE THESE!)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=changeme123
ADMIN_EMAIL=admin@drbirdybooks.com

# File Storage Configuration
STORAGE_TYPE=local
# Options: 'local', 'mongodb', 's3', 'ipfs'
# Use 'mongodb' to store files in MongoDB GridFS

# AWS S3 Configuration (if using S3)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=dr-birdy-books-files

# IPFS Configuration (if using IPFS)
IPFS_API_URL=https://ipfs.infura.io:5001
IPFS_GATEWAY_URL=https://ipfs.io/ipfs/

# Blockchain Configuration
BLOCKCHAIN_RPC_URL=https://sepolia.base.org
STAKING_CONTRACT_ADDRESS=0x11D9250B066Cb4E493D78BBc1E07153DcA265746
TOKEN_CONTRACT_ADDRESS=0xdEA33fCB6BDCaB788De398A636a1227122Ae3d7D

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
# For production, set to your frontend domain

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits
MAX_FILE_SIZE=52428800
# 50MB in bytes (52428800)


